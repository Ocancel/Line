<% let count = 0 %>
<% site.posts.forEach((post) => { %>
  <% if (currentPost.link !== post.link) { %>
    <% currentPost.tags.forEach((tag) => { %>
      <% if (count < 2 && post.tags.find((tag2) => tag2.name === tag.name)) { %>
        <% count += 1 %>
        <div class="border-internal border-gray-400 py-6">
          <dev class="flex">
            <div class="post-title-sidebar text-lg my-2"></div>
            <a href="<%= post.link %>" class="text-lg hover:text-red-600 my-2 inline-block post-title">
              <% if (post.isTop) { %>
                <i class="icon icon-top post-top"></i>
              <% } %>
              <%= post.title %>
            </a>
          </dev>
        </div>
      <% } %>
    <% }) %>
  <% } %>
<% }) %>
<% if (count === 0) { %>
  <div class="py-6 text-gray-700 text-sm">暂无相关文章</div>
<% } %>