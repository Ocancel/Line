<div id="gitalk-container"></div>
<script>
  var gitalk = new Gitalk({
    clientID: '<%= site.customConfig.gitalkClientId %>',
    clientSecret: '<%= site.customConfig.gitalkClientSecret %>',
    repo: '<%= site.customConfig.gitalkRepository %>',
    owner: '<%= site.customConfig.gitalkOwner %>',
    admin: ['<%= site.customConfig.gitalkAdmin %>'],
    id: (location.pathname).substring(0, 49), 
    distractionFreeMode: false
  })
  gitalk.render('gitalk-container')
</script>
