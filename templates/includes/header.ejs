<% let map = new Map(); 
map.set('首页','home'); 
map.set('归档','archive'); 
map.set('标签','tags');
map.set('关于','user'); %>
<div class="flex justify-between items-center mt-10">
  <h1 class="text-lg sm:text-xl md:text-2xl lg:text-3xl text-gray-900 font-medium md:font-normal leading-none">
    <div class="glitch-wrapper">
      <div class="glitch" data-text="<%= themeConfig.siteName %>">
        <a href="<%= themeConfig.domain %>"><%= themeConfig.siteName %></a>
      </div>
    </div>
  </h1>
  <div class="block lg:hidden" id="thumb-menu">
    <button id="thumb-open" type="button" class="block">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M2 6H22V7H2V6ZM2 12H22V13H2V12ZM22 18H2V19H22V18Z" class="fill-current text-gray-900"></path></svg>
    </button>
    <button id="thumb-close" type="button" class="hidden">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M4 4L20 20M20 4L4 20" class="" stroke="#1A202C"></path></svg>
    </button>
  </div>
</div>
<div id="nav-list" class="lg:block hidden">
  <div class="w-full block lg:flex lg:justify-between border-external-bottom lg:border-gray-400 mt-10 text-gray-700 font-medium lg:text-lg">
    <div class="lg:flex -mb-px">
      <% menus.forEach(function(menu, index) { %>
        <% if (menu.openType === 'External') { %>
          <a href="<%= menu.link %>" class="nav-link" target="_blank">
            <i class="icon icon-<%= map.get(menu.name) %>"></i> 
            <%= menu.name %>
          </a>
        <% } else { %>
          <a href="<%= menu.link %>" class="nav-link">
            <i class="icon icon-<%= map.get(menu.name) %>"></i> 
            <%= menu.name %>
          </a>
        <% } %>
      <% }); %>
      <div class="search-frame">
        <i class="icon icon-search"></i>
        <form id="search-form" action="<%= themeConfig.domain %>/search/">
          <input name="searchContent" type="text" placeholder="Search..." />
        </form>
      </div>
    </div>
    <div class="lg:flex">
      <ul>
        <% ['github', 'email', 'twitter', 'instagram', 'weibo'].forEach((item) => { %>
          <% if (site.customConfig[item]) { %>
            <li class="link-li">
              <% if (item === 'email') { %>
                <a href="mailto:<%= site.customConfig[item] %>" class="block lg:mt-0 lg:ml-8 align-center hover:text-gray-900" target="_blank">
                  <i class="icon icon-<%- [item] %>"></i>
                  <!-- <%- { email: 'Email' }[item] %> -->
                </a>
              <% } else { %>
                <a href="<%= site.customConfig[item] %>" class="block lg:mt-0 lg:ml-8 align-center hover:text-gray-900" target="_blank">
                  <i class="icon icon-<%- [item] %>"></i>
                  <!-- <%- { github: 'GitHub', twitter: 'Twitter', instagram: 'Instagram', weibo: 'Weibo' }[item] %> -->
                </a>
              <% } %>
            </li>
          <% } %>
        <% }) %>
      </ul>
      <a href="<%= themeConfig.domain %>/atom.xml" class="block mt-6 lg:mt-0 lg:ml-8 align-center hover:text-gray-900" target="_blank">
        <i class="icon icon-rss"></i>
        RSS
      </a>
    </div>
  </div>
</div>