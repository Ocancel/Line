<!DOCTYPE html>
<html lang="zh-cmn-Hans">
<head>
  <%- include('./includes/head', { siteTitle: themeConfig.siteName }) %>
</head>
<body>
  <div class="antialiased">
    <div class="body-width mx-auto px-6 md:px-8">
      <%- include('./includes/header') %>
      <div class="mb-20 md:flex mt-10 lg:mt-6 md:border-internal md:border-gray-400 md:pt-2 lg:border-t-0 lg:pt-0">
        <div class="w-full">
          <div class="mt-6 lg:mt-10 border-internal border-gray-400">
            <div class="border-internal border-gray-400 py-6 sm:py-8 lg:py-10">
              <% posts.forEach(function(post) { %>
                <div class="post-arch-bgc flex flex-col md:flex-row flex-wrap justify-between sm:text-lg lg:text-xl mb-6">
                  <a href="<%= post.link %>" class="post-list-title text-gray-900 hover:text-red-600">
                    <%= post.title %>
                  </a>
                  <div class="post-arch-date text-gray-700">
                    <%= post.dateFormat %>
                  </div>
                </div>
              <% }); %>
            </div>
          </div>
          <%- include('./includes/pagination') %>
        </div>
      </div>
      <%- include('./includes/footer') %>
    </div>
  </div>
</body>
</html>