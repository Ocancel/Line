<!DOCTYPE html>
<html lang="zh-cmn-Hans">
<head>
  <%- include('./includes/head', { siteTitle: themeConfig.siteName }) %>
  <meta name="description" content="<%= themeConfig.siteDescription %>">
</head>
<body>
  <div class="antialiased">
    <div class="max-w-6xl mx-auto px-6 md:px-8">
      <%- include('./includes/header') %>
      <% if (site.isHomepage) { %>
        <div class="pt-10 md:py-6 flex items-start">
          <div class="w-24 h-24 md:w-32 md:h-32 mr-6 block flex-shrink-0">
            <img class="w-24 h-24 md:w-32 md:h-32 rounded-avator" src="<%= themeConfig.domain %>/images/avatar.png?v=<%= site.utils.now %>" alt="">
            <div class="brief-div">
              <p id="brief"><%- site.customConfig.brief %></p>
            </div>
          </div>
          <div class="text-base sm:text-xl flex-end lg:text-2xl text-gray-700">
            <!-- <%- themeConfig.siteDescription %> -->
            <div class="sentence-windows">
              <div class="sentence-content">
                <p class="sentence-hi"> </p>
                <p class="sentence-from"> </p>
                <div class="sentence-progress-con">
                  <div class="sentence-progress-time" style="left:0%"></div>
                </div>
              </div>
              <div class="sentence-button">
                <input type="button" class="sentence-sub" value="Update">
              </div>
            </div>
          </div>
        </div>
      <% } %>
      <div class="mb-20 md:flex mt-10 lg:mt-6 md:border-internal md:border-gray-400 md:pt-2 lg:border-t-0 lg:pt-0">
        <%- include('./includes/post-list') %>
        <div class="w-full md:w-1/3 md:pl-8">
          <%- include('./includes/tag-cloud') %>
          <%- include('./includes/friends') %>
        </div>
      </div>
      <%- include('./includes/footer') %>
    </div>
  </div>
  <script src="<%= themeConfig.domain %>/media/js/description.js"></script>
</body>
</html>