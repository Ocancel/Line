<html lang="en">
<head>
  <%- include('./includes/head', { siteTitle: themeConfig.siteName }) %>
  <meta name="description" content="<%= themeConfig.siteDescription %>">
</head>
<body>
  <div class="antialiased">
    <div class="max-w-6xl mx-auto px-6 md:px-8">
      <%- include('./includes/header') %>
      <% if (site.isHomepage) { %>
        <div class="pt-10 md:py-6 flex items-start">
          <div class="w-24 h-24 md:w-32 md:h-32 mx-8 block flex-shrink-0">
            <img class="w-24 h-24 md:w-32 md:h-32 rounded-full" src="<%= themeConfig.domain %>/images/avatar.png?v=<%= site.utils.now %>" alt="">
            <div class="brief-div">
              <p id="brief"><%- site.customConfig.brief %></p>
            </div>
          </div>
          <div class="text-lg sm:text-xl lg:text-2xl text-gray-700">
            <%- themeConfig.siteDescription %>
          </div>
        </div>
      <% } %>
      <div class="mb-20 md:flex mt-10 lg:mt-6 md:border-internal md:border-gray-400 md:pt-2 lg:border-t-0 lg:pt-0">
        <%- include('./includes/post-list') %>
        <div class="w-full md:w-1/3 md:pl-8">
          <div class="text-base font-thin text-gray-700 mb-2 mt-6 md:mt-8">标签云</div>
          <div>
            <% site.tags.forEach(function(tag, tagIndex) { %>
              <a href="<%= tag.link %>" class="py-1 px-4 border-gray-300 border text-sm inline-block text-gray-700 hover:text-gray-900 rounded mr-2 mb-2"><%= tag.name %></a>
            <% }); %>
          </div>
        </div>
      </div>
      <%- include('./includes/footer') %>
    </div>
  </div>
  <script src="<%= themeConfig.domain %>/media/js/description.js"></script>
</body>
</html>