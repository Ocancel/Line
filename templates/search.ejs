<!DOCTYPE html>
<html lang="zh-cmn-Hans">
<head>
  <%- include('./includes/head', { siteTitle: themeConfig.siteName }) %>
  <meta name="description" content="<%= themeConfig.siteDescription %>">
</head>
<body>
  <div class="antialiased">
    <div class="max-w-6xl mx-auto px-6 md:px-8">
      <%- include('./includes/header') %>
      <div class="mb-20 md:flex mt-10 lg:mt-6 md:border-internal md:border-gray-400 md:pt-2 lg:border-t-0 lg:pt-0">
        <form id="search-form" action="<%= themeConfig.domain %>/search/">
            <input name="searchContent" />
        </form>
        <div id="search-result" data-update="<%= site.utils.now %>">
            <div class="searching">搜索中......</div>
            <div class="no-result" style="display:none">未搜索到相关文章</div>
        </div>
      </div>
      <div class="w-full md:w-1/3 md:pl-8">
        <div class="text-base font-thin text-gray-700 mb-2 mt-6 md:mt-8">标签云</div>
        <div>
          <% site.tags.forEach(function(tag, tagIndex) { %>
            <a href="<%= tag.link %>" class="py-1 px-4 border-gray-300 border text-sm inline-block text-gray-700 hover:text-gray-900 rounded mr-2 mb-2"><%= tag.name %></a>
          <% }); %>
        </div>
      </div>
      <%- include('./includes/footer') %>
    </div>
  </div>
  <script src="<%= themeConfig.domain %>/media/search/result.ejs" type="text/ejs"></script>
  <script src="<%= themeConfig.domain %>/media/search/fuse.js"></script>
  <script src="<%= themeConfig.domain %>/media/search/search.min.js"></script>
  <script src="<%= themeConfig.domain %>/media/search/search.js"></script>
</body>
</html>